			</div>
		</div>
	</section>
	<section class="qui-suis-je" aria-label="Qui-suis-je" id="qui-suis-je">
		<h1 class="text-center bg-secondary text-primary m-auto p-5 mt-5">
			Qui-suis-je
		</h1>
		<div class="section2 d-flex m-5">
			{% for object in content %}
			<div class="information">
				<div class="box">
					<img class="photo" src="{{ asset(object.photo) }}" alt="Photo">
					<div class="top"></div>
					<div class="bottom"></div>
					<div class="left"></div>
					<div class="right"></div>
				</div>
				<div class="information-perso">
					<p class="text-primary bg-secondary p-3">{{ object.information }}</P>
				</div>
				</div>
				<div class="content">
					<p class="text-primary bg-secondary p-3">{{ object.content }}</P>
				</div>
			{% endfor %}
		</div>
	</section>

	<section class="project d-flex flex-column align-items-center" aria-label="Project" id="project">
		{% for project in projects %}
			<div class="description">
				<p class="text-primary bg-secondary mt-3">{{ project.description }}</P>
			</div>
			{% for tag in project.Tags %}
				<p class="text-secondary bg-primary mt-3">{{ tag.language }}</p>
			{% endfor %}

			<iframe class="mb-5" src="{{ project.url }}" width="75%" height="500"></iframe>
			<a class="text-primary bg-secondary mb-5" href="{{ project.url }}">
				Lien du d√©ploiement
			</a>
		{% endfor %}
	</section>
	<section class="contact d-flex flex-column align-items-center bg-secondary text-primary" aria-label="Contact" id="contact">
		{{ form_start(contactForm) }}
		{{ form_widget(contactForm) }}
		<button type="submit">Envoyer</button>
		{{ form_end(contactForm) }}
	</section>
{% endblock %}
